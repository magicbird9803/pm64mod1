#new:Script $Script_Interact
{
	Call	 DisablePlayerInput ( .True )
	Switch *GB_StoryProgress
		Case < 0000000F %some time mid chapter 5
			Call     SpeakToPlayer 	( 00000010 00EC000A 00EC0009 00000000 $ShroomCake )
		Case < 0000003B %Removed last stand advice
			Call     SpeakToPlayer 	( 00000010 00EC000A 00EC0009 00000000 $ShroomCake )
		Case < 0000005E %entering bowser's castle
			Call     SpeakToPlayer 	( 00000010 00EC000A 00EC0009 00000000 $BattleAdvice2 )
		Default
			Call     SpeakToPlayer 	( 00000010 00EC000A 00EC0009 00000000 $StoneStory )
	EndSwitch
	Call	 DisablePlayerInput ( .False )
	Exec $Script_TurnBack
	Return
	End
}

#new:Script $Script_TurnBack %turn around when player is not in range
{
	Label 1					 
	Call	 IsPlayerWithin ( -80` 80` 80` *Var[0] )
	If *Var[0] == 1`
		Wait 1
		Goto 1
	EndIf
	Call	 InterpNpcYaw ( .Npc:Self 90.0 10` )	
	Call	 SetNpcYaw	  ( .Npc:Self 90.0 )
	Return
	End
}

